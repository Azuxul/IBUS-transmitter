<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllerActivity"
    android:background="@color/colorBackground">

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickView_left"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        custom:JV_borderWidth="4dp"
        custom:JV_borderColor="@color/colorStickBorder"
        custom:JV_backgroundColor="@color/colorStickBackground"
        custom:JV_buttonColor="@color/colorStick"
        custom:JV_fixedCenter="false" />

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickView_right"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        custom:JV_borderWidth="4dp"
        custom:JV_borderColor="@color/colorStickBorder"
        custom:JV_backgroundColor="@color/colorStickBackground"
        custom:JV_buttonColor="@color/colorStick"
        custom:JV_fixedCenter="false" />

    <Button
        android:id="@+id/button_arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arm"
        android:background="@color/colorStickBackground"
        android:textColor="@color/colorStick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/rssi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/rssi"
        android:layout_marginEnd="20dp" />

</RelativeLayout>